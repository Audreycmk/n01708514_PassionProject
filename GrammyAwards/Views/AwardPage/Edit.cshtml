@model GrammyAwards.Models.ArtistDto

@{
    ViewData["Title"] = "Edit Artist";
}

<h1>Edit Artist</h1>

<h4>Artist Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArtistId" />

            <div class="form-group">
                <label asp-for="ArtistId">Artist ID</label>
                <p class="form-control-static">@Model.ArtistId</p>
                <!-- Display Artist ID but make it non-editable -->
            </div>

            <div class="form-group">
                <label asp-for="ArtistName">Artist Name</label>
                <input asp-for="ArtistName" class="form-control" />
                <span asp-validation-for="ArtistName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nationality">Nationality</label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>

           <div class="form-group mt-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Details" asp-controller="ArtistPage" asp-route-id="@Model.ArtistId" class="btn btn-secondary">Cancel</a>
         </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
