@model GrammyAwards.Models.ViewModels.ArtistDetails

@{
    ViewData["Title"] = "Artist Details";
}

<div class="container">
    <h1>Artist Details</h1>

    @if (Model?.Artist != null)
    {
        <h2>@Model.Artist.ArtistName</h2>
        <dl class="row">
            <dt class="col-sm-3">Artist ID:</dt>
            <dd class="col-sm-9">@Model.Artist.ArtistId</dd>
            <dt class="col-sm-3">Nationality:</dt>
            <dd class="col-sm-9">@Model.Artist.Nationality</dd>
        </dl>

        @* <h3>Songs</h3> *@
        @if (Model.Songs != null && Model.Songs.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Song Title</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var song in Model.Songs)
                    {
                        <tr>
                            <td>@song.SongName</td>
                            <td>@song.Role</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No songs available for this artist.</p>
        }

        <!-- Action Buttons -->
        <div class="mt-3">
            <a class="btn btn-primary" href="@Url.Action("Edit", "ArtistPage", new { id = Model.Artist.ArtistId })">Edit Artist</a>
            <form method="post" action="@Url.Action("DeleteConfirmed", "ArtistPage", new { id = Model.Artist.ArtistId })" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this artist?');">Delete Artist</button>
            </form>
            <a class="btn btn-secondary" href="@Url.Action("List", "ArtistPage")">Back to List</a>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <h4>Error</h4>
            <p>Artist data is not available.</p>
            <a class="btn btn-secondary" href="@Url.Action("List", "ArtistPage")">Back to List</a>
        </div>
    }
</div>

@section Scripts {
    <!-- Optional: Add any JavaScript if needed -->
}