@model GrammyAwards.Models.ViewModels.ArtistDetails

@{
    ViewData["Title"] = "Edit Artist";
}

<div class="container">
    <h1>Edit Artist</h1>

    @if (Model?.Artist != null)
    {
        <form asp-action="Update" asp-controller="ArtistPage" method="post">
            <!-- Hidden field for ArtistId -->
            <input type="hidden" asp-for="Artist.ArtistId" />

            <div class="form-group">
                <label asp-for="Artist.ArtistId">Artist ID</label>
                <p class="form-control-static">@Model.Artist.ArtistId</p>
            </div>

            <div class="form-group">
                <label asp-for="Artist.ArtistName">Artist Name</label>
                <input asp-for="Artist.ArtistName" class="form-control" />
                <span asp-validation-for="Artist.ArtistName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Artist.Nationality">Nationality</label>
                <input asp-for="Artist.Nationality" class="form-control" />
                <span asp-validation-for="Artist.Nationality" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Details" asp-controller="ArtistPage" asp-route-id="@Model.Artist.ArtistId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <h4>Error</h4>
            <p>Artist data is not available.</p>
            <a asp-action="List" asp-controller="ArtistPage" class="btn btn-secondary">Back to List</a>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}